# -------------------------------------------------------------------------------------------------------------------- #
# dos2unix: Convert \r\n to \n
function dos2unix() {
    [[ $# -lt 1 ]] && return 1

    local c=$(type -P dos2unix) x
    [[ -z ${c} ]] && c=$(type -P $(GNU sed perl))
    case ${c} in
        *sed)       c="${c} -i s/\r//g"         ;;
        *perl)      c="${c} -pi -e s/[\r]//g"   ;;
    esac

    for x in "$@"; do [[ -f "${x}" ]] && ${c} "${x}"; done
    return 0
}
export -f dos2unix

