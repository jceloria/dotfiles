# -------------------------------------------------------------------------------------------------------------------- #
# get file modification time
function getMtime() {
    [[ $# -lt 1 ]] && return 1

    local c=$(type -P $(GNU stat perl))
    case ${c} in
        *stat) ${c} -c %Y $@ 2>/dev/null ;;
        *perl) ${c} -e 'printf"%s\n",(stat)[9] for @ARGV' $@ ;;
    esac
}
export -f getMtime
# -------------------------------------------------------------------------------------------------------------------- #
