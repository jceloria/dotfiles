# -------------------------------------------------------------------------------------------------------------------- #
# get file access time
function getAtime() {
    [[ $# -lt 1 ]] && return 1

    local c=$(type -P $(GNU stat perl))
    case ${c} in
        *stat) ${c} -c %X $@ 2>/dev/null ;;
        *perl) ${c} -e 'printf"%s\n",(stat)[8] for @ARGV' $@ ;;
    esac
}
export -f getAtime
# -------------------------------------------------------------------------------------------------------------------- #
