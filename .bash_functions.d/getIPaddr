# ---------------------------------------------------------------------------- #
# get local ip address(es)
function getIPaddr() {
    local c=$(type -P ip ifconfig)
    case ${c} in
        *ip) ip addr show $@|sed -nr 's|.*inet ([^ ]+)/.*|\1|p'         ;;
        *ifconfig) ifconfig $@|awk '$1=="inet"{print $2}'|cut -d: -f2   ;;
    esac
}
# ---------------------------------------------------------------------------- #
