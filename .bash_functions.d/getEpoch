# -------------------------------------------------------------------------------------------------------------------- #
# get seconds since epoch
function getEpoch() {
    local c=$(type -P $(GNU date perl))
    case ${c} in
        *date) ${c} '+%s' 2>/dev/null ;;
        *perl) ${c} -e 'print time,"\n"' ;;
    esac

    return $?
}
export -f getEpoch
# -------------------------------------------------------------------------------------------------------------------- #
