# -------------------------------------------------------------------------------------------------------------------- #
# unix2dos: Convert \n to \r\n
function unix2dos() {
    [[ $# -lt 1 ]] && return 1

    local c=$(type -P unix2dos) x
    [[ -z ${c} ]] && c=$(type -P $(GNU sed perl))
    case ${c} in
        *sed)       c="${c} -i 's/\r//' $i"     ;;
        *perl)      c="${c} -pi -e 's/[\r]//g'" ;;
    esac

    for x in "$@"; do [[ -f "${x}" ]] && ${c} "${x}"; done
    return 0
}
export -f unix2dos

